  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2021",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "isolatedModules": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["*", "src/**/*"],
  "exclude": ["node_modules"]
}
